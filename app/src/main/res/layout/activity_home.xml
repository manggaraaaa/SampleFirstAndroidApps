<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.muhammadaa.refactoryapps.HomeActivity">

    <LinearLayout
        android:id="@+id/vBody"
        android:layout_width="match_parent"
        android:layout_height="407dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/bATService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="GoTo Service!"/>
        <EditText
            android:id="@+id/eShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/vService"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/bService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Download"
            android:textColor="#fff"
            android:background="#7f0000"
            android:onClick="startFileService"/>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/vFooter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"></FrameLayout>

</LinearLayout>
